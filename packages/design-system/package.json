{
  "name": "@dawg-ai/design-system",
  "version": "0.1.0",
  "description": "DAWG AI Design System - Comprehensive component library for music production UI",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
