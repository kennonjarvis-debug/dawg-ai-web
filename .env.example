# DAWG AI - Environment Variables Template
# Copy this to .env.local and fill in your values

# ============================================
# Backend API (apps/backend)
# ============================================
NODE_ENV=development
PORT=3001
API_URL=http://localhost:3001

# ============================================
# Database (PostgreSQL)
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/dawg_ai
REDIS_URL=redis://localhost:6379

# ============================================
# Authentication
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=7d
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-change-this

# ============================================
# AI Services
# ============================================

# Claude API (Main AI Producer/Coach)
ANTHROPIC_API_KEY=sk-ant-xxx

# Deepgram (Speech-to-Text)
DEEPGRAM_API_KEY=xxx

# ElevenLabs (Text-to-Speech)
ELEVENLABS_API_KEY=xxx

# OpenAI (Optional - for GPT-4 features)
OPENAI_API_KEY=sk-xxx

# Hugging Face (MusicGen, Magenta models)
HUGGINGFACE_TOKEN=hf_xxx

# LANDR (Mastering API - Optional)
LANDR_API_KEY=xxx

# ============================================
# Cloud Storage
# ============================================

# Supabase (MVP Storage)
SUPABASE_URL=https://xxx.supabase.co
SUPABASE_KEY=xxx
SUPABASE_BUCKET=dawg-ai-audio

# AWS S3 (Scale Storage - Optional)
AWS_ACCESS_KEY_ID=xxx
AWS_SECRET_ACCESS_KEY=xxx
AWS_S3_BUCKET=dawg-ai-storage
AWS_REGION=us-east-1

# ============================================
# Monitoring & Analytics
# ============================================

# Sentry (Error Tracking)
SENTRY_DSN=https://xxx@sentry.io/xxx
SENTRY_ENVIRONMENT=development

# LogRocket (Session Replay - Optional)
LOGROCKET_APP_ID=xxx/dawg-ai

# ============================================
# Email (Transactional)
# ============================================
SENDGRID_API_KEY=SG.xxx
EMAIL_FROM=noreply@dawg.ai

# ============================================
# Feature Flags
# ============================================
ENABLE_AI_FEATURES=true
ENABLE_VOICE_CONTROL=true
ENABLE_COLLABORATION=false
ENABLE_OFFLINE_MODE=true

# ============================================
# Development
# ============================================
DEBUG=false
LOG_LEVEL=info
